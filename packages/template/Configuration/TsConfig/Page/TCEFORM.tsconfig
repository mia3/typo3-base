#
# TCEFORM
#
TCEFORM {
  pages {
    rowDescription.disabled = 1
  }

  tt_content {
    frame_class.disabled = 1
    rowDescription.disabled = 1
    CType.removeItems (
      textpic,
      textmedia,
      key,
      bullets,
      table,
      uploads,
      multimedia,
      media,
      mailform,
      search,
      login,
      form_framework,
      menu,
      shortcut,
      script,
      splash,
      div,
      menu_abstract,
      menu_categorized_content,
      menu_categorized_pages,
      menu_recently_updated,
      menu_related_pages,
      menu_section,
      menu_section_pages,
      menu_sitemap,
      menu_sitemap_pages,
      menu_subpages,
      html
    )

    layout {
      removeItems = 0,1,2,3
      addItems {
        21 = LLL:EXT:template/Resources/Private/Language/locallang_be.xml:tt_content.layout.center
        22 = LLL:EXT:template/Resources/Private/Language/locallang_be.xml:tt_content.layout.full
      }
    }

    header_layout {
      altLabels {
        1 = LLL:EXT:template/Resources/Private/Language/locallang_be.xlf:tt_content.header_layout.1
        2 = LLL:EXT:template/Resources/Private/Language/locallang_be.xlf:tt_content.header_layout.2
        3 = LLL:EXT:template/Resources/Private/Language/locallang_be.xlf:tt_content.header_layout.3
        4 = LLL:EXT:template/Resources/Private/Language/locallang_be.xlf:tt_content.header_layout.4
      }

      removeItems = 100,5
    }

    space_before_class {
      removeItems = extra-small,small,medium,large,extra-large
      addItems {
        1 = LLL:EXT:template/Resources/Private/Language/locallang_be.xlf:tt_content.space.line_1
        2 = LLL:EXT:template/Resources/Private/Language/locallang_be.xlf:tt_content.space.line_2
        3 = LLL:EXT:template/Resources/Private/Language/locallang_be.xlf:tt_content.space.line_3
        4 = LLL:EXT:template/Resources/Private/Language/locallang_be.xlf:tt_content.space.line_4
        5 = LLL:EXT:template/Resources/Private/Language/locallang_be.xlf:tt_content.space.line_5
        6 = LLL:EXT:template/Resources/Private/Language/locallang_be.xlf:tt_content.space.line_6
        7 = LLL:EXT:template/Resources/Private/Language/locallang_be.xlf:tt_content.space.line_7
        8 = LLL:EXT:template/Resources/Private/Language/locallang_be.xlf:tt_content.space.line_8
        9 = LLL:EXT:template/Resources/Private/Language/locallang_be.xlf:tt_content.space.line_9
      }
    }

    space_after_class {
      removeItems = extra-small,small,medium,large,extra-large
      addItems {
        1 = LLL:EXT:template/Resources/Private/Language/locallang_be.xlf:tt_content.space.line_1
        2 = LLL:EXT:template/Resources/Private/Language/locallang_be.xlf:tt_content.space.line_2
        3 = LLL:EXT:template/Resources/Private/Language/locallang_be.xlf:tt_content.space.line_3
        4 = LLL:EXT:template/Resources/Private/Language/locallang_be.xlf:tt_content.space.line_4
        5 = LLL:EXT:template/Resources/Private/Language/locallang_be.xlf:tt_content.space.line_5
        6 = LLL:EXT:template/Resources/Private/Language/locallang_be.xlf:tt_content.space.line_6
        7 = LLL:EXT:template/Resources/Private/Language/locallang_be.xlf:tt_content.space.line_7
        8 = LLL:EXT:template/Resources/Private/Language/locallang_be.xlf:tt_content.space.line_8
        9 = LLL:EXT:template/Resources/Private/Language/locallang_be.xlf:tt_content.space.line_9
      }
    }
  }
}
